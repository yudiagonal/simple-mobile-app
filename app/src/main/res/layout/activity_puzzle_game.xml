<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuzzleGame">


    <RelativeLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="buttonClick"
            android:tag="00"
            android:text="1"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn1"
            android:onClick="buttonClick"
            android:tag="01"
            android:text="2"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn2"
            android:onClick="buttonClick"
            android:tag="02"
            android:text="3"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn3"
            android:onClick="buttonClick"
            android:tag="03"
            android:text="4"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn1"
            android:layout_alignParentStart="true"
            android:onClick="buttonClick"
            android:tag="10"
            android:text="5"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn6"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn1"
            android:layout_toEndOf="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:onClick="buttonClick"
            android:tag="11"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn1"
            android:layout_toEndOf="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:onClick="buttonClick"
            android:tag="12"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn1"
            android:layout_toEndOf="@+id/btn3"
            android:layout_toRightOf="@+id/btn3"
            android:onClick="buttonClick"
            android:tag="13"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:onClick="buttonClick"
            android:tag="20"
            android:text="9" />

        <Button
            android:id="@+id/btn10"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn6"
            android:layout_toEndOf="@id/btn1"
            android:layout_toRightOf="@id/btn1"
            android:onClick="buttonClick"
            android:tag="21"
            android:text="10" />

        <Button
            android:id="@+id/btn11"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn7"
            android:layout_toEndOf="@id/btn10"
            android:layout_toRightOf="@id/btn10"
            android:onClick="buttonClick"
            android:tag="22"
            android:text="11" />

        <Button
            android:id="@+id/btn12"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn8"
            android:layout_toEndOf="@id/btn11"
            android:layout_toRightOf="@id/btn11"
            android:onClick="buttonClick"
            android:tag="23"
            android:text="12" />

        <Button
            android:id="@+id/btn13"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn9"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:onClick="buttonClick"
            android:tag="30"
            android:text="13" />

        <Button
            android:id="@+id/btn14"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn10"
            android:layout_toEndOf="@id/btn13"
            android:layout_toRightOf="@id/btn13"
            android:onClick="buttonClick"
            android:tag="31"
            android:text="14" />

        <Button
            android:id="@+id/btn15"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn10"
            android:layout_toEndOf="@id/btn14"
            android:layout_toRightOf="@id/btn14"
            android:onClick="buttonClick"
            android:tag="32"
            android:text="15" />

        <Button
            android:id="@+id/btn16"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btn10"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@id/btn15"
            android:layout_toRightOf="@id/btn15"
            android:onClick="buttonClick"
            android:tag="33"
            android:text="" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="99dp"
        android:layout_marginVertical="60dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Urutkan Angka 1-15"
        android:textSize="20sp" />

</FrameLayout>