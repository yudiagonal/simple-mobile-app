<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="MENU"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDataDiri"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Profile"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btnKonten"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnKonten"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWeb"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="Github"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btnKalkulator"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnKalkulator"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKalkulator"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:text="Kalkulator"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btnSosialMedia"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnSosialMedia"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSosialMedia"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:text="Sosial Media"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btntabs"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btntabs"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntabs"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="384dp"
        android:text="BIODATA"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btnAlarm"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnAlarm"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlarm"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="432dp"
        android:text="Alarm"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btnKeGame"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/btnKeGame"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKeGame"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:text="Puzzle"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKonten"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:text="Sejarah Golang"
        app:backgroundTint="@color/primaryColor2"
        app:layout_constraintEnd_toEndOf="@+id/btnWeb"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnWeb"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>